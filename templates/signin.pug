doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
    body
      form(action="/signin" method="post")
        .username
          label username
          input(type="text" name="username") // nameはnew LocalStrategyのところで使います。
        .password
          label password
          input(type="password" name="password") // nameはnew LocalStrategyのところで使います。
        .signin
          input(type="submit")